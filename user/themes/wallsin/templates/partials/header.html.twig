<header class="page-header">
  <div class="row">
    <div class="column">
      <div class="page-header-row">
        <nav class="menu">
          <ul class="menu--list">
            {% for page in pages.children %}
            {% if page.visible %}
            {% set current_page = (page.active or page.activeChild) ? ' active' : '' %}
            <li class="menu--item">
              <a href="{{ page.url }}" class="menu--link{{ current_page }}">{{ page.menu }}</a>
            </li>
            {% endif %}
            {% endfor %}
          </ul>
        </nav>
        <section class="page-header--logo medium-3">
          <div class="row">
            <div class="column xsmall-8 medium-12">
              <img src="{{ theme_url }}/img/logga_wallsin.svg" />
            </div>
            <div class="column xsmall-4 hide-for-medium-up">
              <button class="hamburger hamburger--slider" type="button">
                <span class="hamburger-box">
                  <span class="hamburger-inner"></span>
                </span>
              </button>
            </div>
          </div>
        </section>
      </div>
    </div>
  </div>
</header>
